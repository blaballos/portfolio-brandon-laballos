---
import Send from "./icons/Send.astro"
---

<form class="w-full md:max-w-sm mx-auto space-y-6 border-4 border-red-500 p-4" action="https://formsubmit.co/4c43286f01416a36e12ca245c6ac791c" method="POST">
    <div class="flex flex-col gap-y-2">
        <label for="name" class="text-md font-HeyComic font-bold text-marianBlue">NOMBRE:</label>
        <input name="name" id="name" type="text" class="border-2 border-red-500 px-2 py-2 text-sm text-royalBlue font-semibold placeholder:text-royalBlue" placeholder="..." required>
    </div>
    <div class="flex flex-col gap-y-2">
        <label for="email" class="text-md font-HeyComic font-bold text-marianBlue">EMAIL:</label>
        <input name="email" id="email" type="email" class="border-2 border-red-500 px-2 py-2 text-sm text-royalBlue font-semibold placeholder:text-royalBlue" placeholder="..." required>
    </div>
    <div class="flex flex-col gap-y-2">
        <label for="message" class="text-md font-HeyComic font-bold text-marianBlue">MENSAJE:</label>
        <textarea name="message" id="message" rows="5" class="border-2 border-red-500 px-2 py-2 text-sm text-royalBlue font-semibold placeholder:text-royalBlue resize-none" placeholder="..." required></textarea>
    </div>
    <div class="flex justify-center items-center">
        <button class="w-full flex justify-center items-center px-4 py-2 border-none bg-royalBlue rounded-2xl rounded-tl-lg rounded-br-lg text-lg text-white font-semibold gap-x-2 group" type="submit">enviar<span class="group-hover:translate-x-1 transition duration-200"><Send /></span></button>
    </div>
    <input type="hidden" name="_autoresponse" value="¡Gracias por tu mensaje! me pondré en contacto contigo lo antes posible :)">
    <input type="hidden" name="_template" value="table">
</form>