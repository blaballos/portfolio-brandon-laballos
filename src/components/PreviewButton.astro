---
import LinkIcon from "./icons/LinkIcon.astro";

const { class:className, href } = Astro.props;
---

<a  target="_blank" href={href} rel="noopener noreferrer" class=`${className} inline-flex items-center justify-center gap-x-1 md:gap-x-2 px-3 py-2 text-sm md:text-md font-medium text-gray-100 bg-gray-950 border border-gray-100 hover:bg-blue-100/30 rounded-2xl transition duration-300`>
    <LinkIcon class="size-5 lg:size-6" /> Preview
</a>