---
import CodeBadge from "./CodeBadge.astro";
import PreviewButton from "./PreviewButton.astro";
import CIcon from "./icons/C++Icon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindCSSIcon from "./icons/TailwindCSSIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import FirebaseIcon from "./icons/FirebaseIcon.astro";

const TAGS = {
    PYTHON: {
        name: "Python",
        class: "border border-yellow-200 bg-yellow-100/30",
        icon: PythonIcon,
    },
    C: {
        name: "C++",
        class: "border border-blue-200 bg-blue-100/30",
        icon: CIcon,
    },
    ASTRO: {
        name: "Astro",
        class: "border border-orange-200 bg-orange-100/30",
        icon: AstroIcon,
    },
    TAILWINDCSS: {
        name: "Tailwind CSS",
        class: "border border-cyan-200 bg-cyan-100/30",
        icon: TailwindCSSIcon,
    },
    JAVASCRIPT: {
        name: "JavaScript",
        class: "border border-yellow-200 bg-yellow-200/30",
        icon: JavaScriptIcon,
    },
    FIREBASE: {
        name: "Firebase",
        class: "border border-orange-200 bg-orange-100/30",
        icon: FirebaseIcon,
    },
}

const PROJECTS = [
    {
        title: "Notapp - Gestiona tus Proyectos",
        description: "En este proyecto, desarrollé una aplicación para la gestión de tareas, integrando JavaScript para la creación dinámica de tarjetas y Firebase para un sistema seguro de registro y autenticación de usuarios.",
        href: "https://github.com/blaballos/notapp",
        preview: "https://notapp-blaballos.netlify.app/",
        image: "/projects/notapp-image.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWINDCSS, TAGS.JAVASCRIPT, TAGS.FIREBASE],
    },
    {
        title: "ToolSun - Catálogo de Componentes Personalizados",
        description: "Desarrolé un sitio dónde podrán encontrar componentes personalizados con Tailwind CSS para diseñar de manera eficiente sus páginas web.",
        href: "https://github.com/blaballos/ToolSun",
        preview: "https://toolsun.netlify.app/",
        image: "/projects/toolsun-image.webp",
        tags: [TAGS.ASTRO, TAGS.TAILWINDCSS],
    },
    {
        title: "Sistema para la Gestión de Clientes",
        description: "He desarrollado un sistema para el registro y gestión de clientes en una veterinaria. Utilicé métodos y atributos privados en las clases, optimizando la encapsulación y mejorando la seguridad del código.",
        href: "https://github.com/blaballos/management-system-for-veterinary",
        notpreview: "hidden",
        image: "/projects/management-system-for-veterinary.webp",
        tags: [TAGS.C],
    },
    {
        title: "Juego de Roles con Python",
        description: "He diseñado un sistema que permite a los usuarios crear su personaje, asignarle un rol y combatir. Uso conceptos como la herencia para modelar las características de los diferentes roles de manera eficiente.",
        href: "https://github.com/blaballos/role-play-game",
        notpreview: "hidden",
        image: "/projects/role-play-game-image.webp",
        tags: [TAGS.PYTHON],
    },
]
---

<div class="flex flex-col gap-y-14">
    {
      PROJECTS.map(({ image, title, description, tags, href, preview, notpreview}) => (
      <article class="flex flex-col space-y-8 md:flex-row md:space-x-8 md:space-y-0">
        <div class="w-full md:w-1/2">
          <div class="relative flex flex-col items-center col-span-6 row-span-5 gap-8 transition duration-500 ease-in-out transform shadow-xl overflow-clip rounded-xl md:group-hover:-translate-y-1 md:group-hover:shadow-2xl lg:border lg:border-gray-800 lg:hover:border-gray-700">
            <img alt="Captura del Proyecto" class="object-cover object-top w-full h-full transition duration-500 md:group-hover:scale-105" loading="lazy" src={image} />
          </div>
        </div>
    
        <div class="w-full md:w-1/2">
          <h3 class="text-2xl font-bold text-white pb-4">{title}</h3>
          <div class="flex flex-wrap">
            <ul class="flex flex-row gap-x-4 pb-4">
              {tags.map((tag) => (
                <li>
                  <span class={`flex text-white gap-x-2 rounded-xl text-xs font-semibold ${tag.class} py-1 px-2`}>
                      <tag.icon class="size-4"/>
                      {tag.name}
                  </span>
                </li>
                ))
              }
            </ul>
        
            <div class="text-md text-white opacity-80 pb-4">{description}</div>
            <footer class="flex flex-row justify-start gap-x-2">
              <CodeBadge href={href}/>
              <PreviewButton href={preview} class={`${notpreview}`} />
            </footer>
          </div>
        </div>
      </article>
      ))
    }
</div>