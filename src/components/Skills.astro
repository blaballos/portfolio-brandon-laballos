---
import CIcon from "./icons/C++Icon.astro";
import PythonIcon from "./icons/PythonIcon.astro";
import AstroIcon from "./icons/AstroIcon.astro";
import TailwindCSSIcon from "./icons/TailwindCSSIcon.astro";
import JavaScriptIcon from "./icons/JavaScriptIcon.astro";
import FirebaseIcon from "./icons/FirebaseIcon.astro";

const ICONS = {
    PYTHON: {
        svg: PythonIcon,
    },
    C: {
        svg: CIcon,
    },
    JAVASCRIPT: {
        svg: JavaScriptIcon,
    },
    FIREBASE: {
        svg: FirebaseIcon,
    },
    ASTRO: {
        svg: AstroIcon,
    },
    TAILWINDCSS: {
        svg: TailwindCSSIcon,
    },
}

const SKILLS = [
    {
        icons: [ICONS.PYTHON],
    },
    {
        icons: [ICONS.C],
    },
    {
        icons: [ICONS.JAVASCRIPT],
    },
    {
        icons: [ICONS.FIREBASE],
    },
    {
        icons: [ICONS.ASTRO],
    },
    {
        icons: [ICONS.TAILWINDCSS],
    },
]
---
<ul class="justify-center grid grid-cols-2 md:grid-cols-3 grid-rows-3 md:grid-rows-2 gap-x-6 md:gap-x-8 gap-y-4 md:gap-y-6">
    {
        SKILLS.map(({icons}) => (
            <li class="flex flex-col w-full items-center bg-gradient-to-b from-blue-100/30 to-transparent col-span-1 py-6 group hover:from-blue-100/50 transition duration-300">
                {icons.map((icon) => (
                    <icon.svg class="size-14 group-hover:scale-125 transition duration-300"/>
                    ))
                }
            </li>
        ))
    }
</ul>

