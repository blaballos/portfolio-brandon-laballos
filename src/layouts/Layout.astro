---
import '@fontsource-variable/onest';
import ClientRouter from 'astro/components/ClientRouter.astro';
import NoiseBackground from '../components/NoiseBackground.astro';

interface Props {
	title: string;
	description: string;
}

const { title, description } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="description" content={description}>
		<title>{title}</title>
		<ClientRouter />
	</head>
	<body class="flex flex-col min-h-screen">
		<NoiseBackground />
		<slot />
	</body>
</html>

<style is:global>
	html {
		background-color: #0A0B08;
		font-family: 'Onest Variable', sans-serif;
	}
	
	body {
		display: flex;
		flex-direction: column;
		min-height: 100vh;
	}

	@font-face {
		font-family: 'LuckiestGuy';
		src: url('/fonts/LuckiestGuy.woff2') format('woff2'),
			 url('/fonts/LuckiestGuy.woff') format('woff');
	}

	@font-face {
		font-family: 'ImFellFrench';
		src: url('/fonts/ImFellFrench.woff2') format('woff2'),
			 url('/fonts/ImFellFrench.woff') format('woff');
		font-weight: normal;
		font-style: normal;
	}

	@font-face {
		font-family: 'ExconVariable';
		src: url('/fonts/ExconVariable.woff2') format('woff2'),
			 url('/fonts/ExconVariable.woff') format('woff');
	}

	@font-face {
		font-family: 'ExconBold';
		src: url('/fonts/ExconBold.woff2') format('woff2'),
			 url('/fonts/ExconBold.woff') format('woff');
	}
</style>