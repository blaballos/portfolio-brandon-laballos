---
import Layout from '../layouts/Layout.astro';
import MusicOn from '../components/icons/MusicOn.astro';
import MusicOff from '../components/icons/MusicOff.astro';
---

<Layout
title='Brandon Laballos - Front End Developer'
description='Contrata a Brandon Laballos para crear tu aplicación web con una interfaz única. Front End Developer de Buenos Aires, Argentina.'
hideHeader={true}
hideFooter={true}>
	<header class="w-full px-4 py-6">
		<div class="max-w-7xl mx-auto flex items-center justify-between font-ExconVariable text-xl text-WHITE">
			<span>© 2025</span>
			<a href="https://github.com/blaballos" target="_blank" rel="noopener noreferrer" aria-label="Go to GitHub profile" class="text-WHITE underline-offset-2 hover:underline">BLABALLOS</a>
		</div>
	</header>
	<main class="flex-1 flex items-center justify-center relative">
		<nav>
			<ol class="font-ExconVariable text-2xl text-WHITE">
				<li><a class="drop-shadow-[3px_3px_0px_#1D1F1A] hover:text-WHITE/80" href="/services">SERVICIOS</a></li>
				<li><a class="drop-shadow-[3px_3px_0px_#1D1F1A] hover:text-WHITE/80" href="/projects">PROYECTOS</a></li>
				<li><a class="drop-shadow-[3px_3px_0px_#1D1F1A] hover:text-WHITE/80" href="/contact">CONTACTO</a></li>
			</ol>
		</nav>
		<div class="absolute bottom-4 left-6 md:left-14 flex items-center justify-center p-4 bg-SUNGLOW drop-shadow-[3px_3px_0px_#1D1F1A] rounded-full">
			<button id="playAudio"><MusicOn /></button>
			<button id="pauseAudio" class="hidden"><MusicOff /></button>
		</div>
	</main>
</Layout>

<script>
	import { Howl } from 'howler';

	const music = new Howl({
		src: ['audio/Will Osborne & His Slide Music - Louisiana Purchase (1940).mp3'],
		autoplay: true,
		loop: true,
		volume: 0.5
	});

	document.addEventListener('DOMContentLoaded', () => {
		const buttonPlay = document.getElementById("playAudio");
		const buttonPause = document.getElementById("pauseAudio");


		buttonPlay?.addEventListener('click', () => {
			music.pause()
			if (buttonPause) {
				buttonPlay.style.display = 'none'
				buttonPause.style.display = 'flex'
			}

		});
		buttonPause?.addEventListener('click', () => {
			music.play()
			if (buttonPlay) {
				buttonPause.style.display = 'none'
				buttonPlay.style.display = 'flex'
			}

		});
	});
</script>