---
// COMPONENTS
import Layout from '../layouts/Layout.astro';
import Section from '../components/Section.astro';
import Badge from '../components/Badge.astro';
import SocialBadges from '../components/SocialBadges.astro';
import ProjectCard from '../components/ProjectCard.astro';
import Skills from '../components/Skills.astro';
import Aboutme from '../components/Aboutme.astro';

// ICONS
import LinkedInIcon from '../components/icons/LinkedInIcon.astro';
import FileIcon from '../components/icons/FileIcon.astro';
import CodeIcon from '../components/icons/CodeIcon.astro';
import ToolIcon from '../components/icons/ToolIcon.astro';
import AboutMeIcon from '../components/icons/AboutMeIcon.astro';
---

<Layout title="Portfolio Brandon Laballos - Junior Developer de Argentina">
	<main class="p-6 lg:p-0">
		<Section class="py-36 lg:py-52">
			<div class="flex flex-row justify-start items-center space-x-2 pb-4">
				<div class="rounded-full shadow-md">
					<img class="size-10 lg:size-14 rounded-full" src="/images/avatar-brandon-laballos.webp" alt="Brandon Laballos">
				</div>
				<a
				href="https://linkedin.com/in/brandonlaballos"
				target="_blank"
				rel="noopener noreferrer" 
				class="flex items-center">
					<Badge>Disponible para Trabajar</Badge>
				</a>
			</div>
			<h1 class="flex flex-row text-4xl lg:text-6xl text-white font-bold pb-4 lg:pb-6">
				Brandon Laballos
			</h1>
			<div class="max-w-3xl pb-4 lg:pb-6">
				<p class="text-lg lg:text-2xl text-pretty font-semibold">
					<span class="opacity-80">Junior Developer de Buenos Aires, Argentina. Estudiante de</span>
					<span class="text-yellow-200">Ingeniería en Sistemas de Información</span>
					<span class="opacity-80">en la UTN, en búsqueda de crear soluciones.</span>
				</p>
			</div>
			<nav class="flex flex-row gap-x-2 lg:gap-x-4">
				<SocialBadges href="https://linkedin.com/in/brandonlaballos">
					<LinkedInIcon class="size-5 lg:size-6"/>
					LinkedIn
				</SocialBadges>
				<SocialBadges href="/docs/cv-brandon-laballos.pdf" download="cv-brandon-laballos.pdf">
					<FileIcon class="size-5 lg:size-6"/>
					Curriculum
				</SocialBadges>
			</nav>
		</Section>

		<Section class="pb-36 lg:pb-20">
			<h2 id="proyectos" class="flex items-center gap-x-2 text-2xl lg:text-3xl font-semibold pb-4 lg:pb-6">
				<CodeIcon class="size-6 lg:size-8" />
				Proyectos
			</h2>
			<ProjectCard />
		</Section>

		<Section class="pb-36 lg:pb-20">
			<h2 id="skills" class="flex items-center gap-x-2 text-2xl lg:text-3xl font-semibold pb-4 lg:pb-6">
				<ToolIcon class="size-6 lg:size-8" />
				Skills
			</h2>
			<Skills />
		</Section>

		<Section class="pb-20">
			<h2 id="sobre-mi" class="flex items-center gap-x-2 text-2xl lg:text-3xl font-semibold pb-4 lg:pb-6">
				<AboutMeIcon class="size-6 lg:size-8" />
				Sobre mí
			</h2>
			<Aboutme />
		</Section>
	</main>
</Layout>
